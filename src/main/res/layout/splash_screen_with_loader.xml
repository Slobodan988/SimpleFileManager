<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:id="@+id/progressBar2"
        android:progressDrawable="@drawable/loader"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/green_logo"
        android:id="@+id/imageView2"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.amaze.filemanager.helper.TextViewFonts
        android:text="@string/simple_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/primary_green"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <com.amaze.filemanager.helper.TextViewFontsBold
            android:text="@string/file_label"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/primary_green"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:layout_below="@+id/textView"
            />

        <com.amaze.filemanager.helper.TextViewFonts
            android:text="@string/menager_label"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@color/primary_green"
            android:textSize="35sp"
            android:layout_below="@+id/textView"

            />
    </LinearLayout>

</RelativeLayout>