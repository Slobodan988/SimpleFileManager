<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.amaze.filemanager.helper.ButtonFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/continue_button"
        android:text="@string/continue_button"
        android:textSize="35sp"
        android:textColor="@color/white"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="75dp"
        android:background = "@drawable/round_button"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/green_logo"
        android:id="@+id/imageView2"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.amaze.filemanager.helper.TextViewFonts
        android:text="@string/simple_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/primary_green"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <com.amaze.filemanager.helper.TextViewFontsBold
            android:text="@string/file_label"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/primary_green"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:layout_below="@+id/textView"
            />

        <com.amaze.filemanager.helper.TextViewFonts
            android:text="@string/menager_label"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@color/primary_green"
            android:textSize="35sp"
            android:layout_below="@+id/textView"

            />
    </LinearLayout>

</RelativeLayout>